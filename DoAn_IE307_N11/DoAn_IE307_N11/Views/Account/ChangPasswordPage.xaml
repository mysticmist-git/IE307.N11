<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoAn_IE307_N11.Views.ChangPasswordPage"
             Background="{StaticResource Background}"
             Title="Thay đổi mật khẩu">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Entry x:Name="oldPasswordEntry" IsPassword="True" Placeholder="Mật khẩu cũ" BackgroundColor="{StaticResource Background}"/>
            <Entry x:Name="newPasswordEntry" IsPassword="True" Placeholder="Mật khẩu mới" BackgroundColor="{StaticResource Background}"/>
            <Entry x:Name="reNewPasswordEntry" IsPassword="True" Placeholder="Nhập lại mật khẩu mới" BackgroundColor="{StaticResource Background}"/>

            <Button Text="Thay đổi mật khẩu"
                    TextColor="{StaticResource Background}"
                    BackgroundColor="{StaticResource Primary}"
                    Clicked="BtnChangePassword_Clicked" />

            <Button Text="Quên mật khẩu?"
                    TextColor="{StaticResource Primary}"
                    BackgroundColor="{StaticResource Background}"
                    x:Name="BtnChangePassword"
                    Clicked="BtnForgetPassword_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>